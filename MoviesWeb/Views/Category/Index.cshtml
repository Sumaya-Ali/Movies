@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-muted">Categories</h2>
        </div>
        <div class="col-6  text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-outline-info "><i class="bi bi-plus-circle-dotted" style=" font-size:20px;"></i> &thinsp; Add New Category</a>
        </div>
    </div>
    <br /><br />
<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">Category Name</th>
            <th scope="col">Display Order</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr class="table-active">
                <td style="width:50%">@obj.Name</td>
                <td style="width:30%">@obj.DisplayOrder</td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Category" asp-action="Edit" class="btn btn-outline-info mx-2" asp-route-id="@obj.Id"><i class="bi bi-pencil-square"></i> Edit</a>
                    </div>
                </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Category" asp-action="Delete" class="btn btn-outline-danger mx-2" asp-route-id="@obj.Id"><i class="bi bi-trash-fill"></i> Delete</a>
                        </div>
                    </td>
            </tr>    
        }
    </tbody>
</table>



</div>